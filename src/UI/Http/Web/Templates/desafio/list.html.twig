{% extends 'base.html.twig' %}

{% block body %}

    <div class="mb-5">
        <div class="row">
            <div class="col-12 {% if result is defined and result is not null %} col-md-6" {% endif %}">
            <h1>{{ "form_title" | trans }}</h1>
            {{ form_start(form) }}
            {{ form_row(form.begin) }}
            {{ form_row(form.last) }}
            {{ form_errors(form) }}
            <button type="submit" class="btn btn-primary">{{ "submit" | trans }}</button>
            {{ form_end(form) }}
        </div>
        {% if result is defined and result is not null %}

            <div class="col-12 col-md-6">
                <div class="">
                    <h1>{{ "result" | trans }}</h1>
                    <ul class="list-group">
                        {% for value in result %}
                            <li class="list-group-item">{{ value }}</li>
                        {% endfor %}
                    </ul>

                </div>
            </div>
        {% endif %}

    </div>



{% endblock %}